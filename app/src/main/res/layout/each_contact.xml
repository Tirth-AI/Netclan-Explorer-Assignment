<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_MainProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="25dp"
                android:textSize="16sp"
                android:textColor="@color/darkBlue"
                android:text="Subhangani Kumari" />

            <TextView
                android:id="@+id/tv_Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:textColor="@color/lighterBlue"
                android:text="New Delhi | Tester" />

            <TextView
                android:id="@+id/tv_Distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:textColor="@color/lighterBlue"
                android:text="Within 100m" />

            <ProgressBar
                android:id="@+id/ProgressBar"
                android:layout_width="100dp"
                android:layout_height="13dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="50dp"
                android:progressDrawable="@drawable/custom_progress_bg"
                style="?android:attr/progressBarStyleHorizontal"/>

            <TextView
                android:id="@+id/tv_Interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/darkBlue"
                android:text="Coffee | Business | Friendship" />

            <TextView
                android:id="@+id/tv_AboutPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/darkBlue"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus eu augue tristique, fermentum purus at, aliquam purus. Integer molestie fringilla dui eu commodo. " />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/cardView_MainProfile"
        app:layout_constraintTop_toTopOf="@id/cardView_MainProfile">

        <ImageView
            android:id="@+id/iv_profilePic"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/profile"
            android:background="@drawable/profilepic_bg"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ INVITE"
        android:textColor="@color/darkBlue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/cardView_MainProfile"
        android:elevation="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>